{
	"type": "module",
	"name": "express-hybrid-auth-api",
	"version": "1.0.0",
	"description": "Hybrid authentication API using Express sessions and JWTs with secure HTTP-only cookies.",
	"main": "dist/index.js",
	"prisma": {
		"seed": "tsx prisma/seed.ts"
	},
	"scripts": {
		"format": "prettier --write .",
		"codegen": "openapi-rq -i ./.swagger/express-hybrid-auth-api.yml",
		"email:dev": "npx react-email dev --dir emails/templates",
		"prisma:generate": "prisma generate",
		"reset-and-seed": "npx prisma migrate reset --force",
		"coverage": "vitest --coverage && node -e \"console.log('ðŸ“„ Coverage report: file:///' + require('path').resolve('coverage/lcov-report/index.html'))\"",
		"predev": "npm run run-local-dev-environment && sleep 3 && npm run reset-and-seed",
		"dev": "cross-env NODE_ENV=development tsx watch src/index.ts",
		"build": "rimraf ./dist && tsc -p tsconfig.build.json && tsc-alias --outDir dist && npm run generate:swagger",
		"fix-paths": "npx fix-esm-import-path dist/src/index.js",
		"//start": "cross-env NODE_ENV=production node dist/src/index.js",
		"lint": "eslint src/ --ext .ts",
		"test": "cross-env NODE_ENV=testing vitest",
		"generate:swagger": "tsx src/swagger-generate.ts",
		"run-local-dev-environment": "docker-compose -f .devcontainer/docker-compose.yml down -v --remove-orphans && docker-compose -f .devcontainer/docker-compose.yml pull && docker-compose -f .devcontainer/docker-compose.yml up -d --remove-orphans",
		"prepare": "npx husky && npm run prisma:generate",
		"create:prod-image": "docker build -t express-hybrid-auth-api:latest .",
		"run-local-prod-environment": "docker-compose -f .devcontainer/docker-compose.prod.yml down -v && docker-compose -f .devcontainer/docker-compose.prod.yml up -d postgres redis smtp4dev && docker-compose -f .devcontainer/docker-compose.prod.yml run --rm migrate && docker-compose -f .devcontainer/docker-compose.prod.yml up --build -d --remove-orphans api",
		"start:prod-local": "npm run run-local-prod-environment",
		"inspect-image": "docker run --rm -it express-hybrid-auth-api sh"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"devDependencies": {
		"@7nohe/openapi-react-query-codegen": "^1.6.2",
		"@babel/core": "^7.26.10",
		"@babel/preset-env": "^7.26.9",
		"@commitlint/cli": "^19.8.1",
		"@commitlint/config-conventional": "^19.8.1",
		"@eslint/js": "^9.21.0",
		"@types/cookie-parser": "^1.4.8",
		"@types/express": "^5.0.1",
		"@types/express-session": "^1.18.1",
		"@types/js-yaml": "^4.0.9",
		"@types/jsonwebtoken": "^9.0.9",
		"@types/nodemailer": "^6.4.17",
		"@types/passport-github2": "^1.2.9",
		"@types/passport-google-oauth20": "^2.0.16",
		"@types/qrcode": "^1.5.5",
		"@types/react": "^19.1.2",
		"@types/supertest": "^6.0.3",
		"@vitest/coverage-v8": "^3.2.4",
		"@vitest/ui": "^3.2.4",
		"cross-env": "^7.0.3",
		"dotenv-cli": "^8.0.0",
		"eslint": "^9.21.0",
		"fix-esm-import-path": "^1.10.3",
		"globals": "^16.0.0",
		"jsdom": "^26.1.0",
		"prettier": "^3.6.2",
		"prisma": "^6.6.0",
		"rimraf": "^6.0.1",
		"semantic-release": "^24.2.7",
		"supertest": "^7.1.0",
		"ts-node": "^10.9.2",
		"tsc-alias": "^1.8.16",
		"tsx": "^4.19.3",
		"typescript": "^5.8.2",
		"typescript-eslint": "^8.26.0",
		"vitest": "^3.2.4"
	},
	"dependencies": {
		"@node-rs/argon2": "^2.0.2",
		"@oslojs/crypto": "^1.0.1",
		"@oslojs/encoding": "^1.1.0",
		"@prisma/client": "^6.6.0",
		"@react-email/components": "^0.0.36",
		"@types/swagger-jsdoc": "^6.0.4",
		"@types/swagger-ui-express": "^4.1.8",
		"app-root-path": "^3.1.0",
		"connect-redis": "^8.0.3",
		"cookie-parser": "^1.4.7",
		"csrf-sync": "^4.2.1",
		"dirname-filename-esm": "^1.1.2",
		"dotenv": "^16.4.7",
		"express": "^4.21.2",
		"express-session": "^1.18.2",
		"i18next": "^25.0.1",
		"i18next-fs-backend": "^2.6.0",
		"i18next-http-middleware": "^3.7.4",
		"ioredis": "^5.6.0",
		"jsonwebtoken": "^9.0.2",
		"nodemailer": "^6.10.1",
		"otplib": "^12.0.1",
		"passport": "^0.7.0",
		"passport-github2": "^0.1.12",
		"passport-google-oauth20": "^2.0.0",
		"pino": "^9.7.0",
		"pino-pretty": "^13.0.0",
		"qrcode": "^1.5.4",
		"react-email": "^4.0.7",
		"redis": "^5.0.1",
		"rotating-file-stream": "^3.2.6",
		"swagger-jsdoc": "^6.2.8",
		"swagger-themes": "^1.4.3",
		"swagger-ui-express": "^5.0.1",
		"valibot": "^1.0.0",
		"yaml": "^2.8.0",
		"zod": "^3.24.3"
	}
}
